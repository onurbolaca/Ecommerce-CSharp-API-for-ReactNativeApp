
@{
	ViewBag.Title = "JqueryTest";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";

	<style>

		.siyahyap {
			background-color: black !important;
		}
	</style>
}


<div class="row">
	<div class="col-md-12">
		<div id="dvTasiyici">
			<div id="dvRenk" style="width:200px; height:200px; background-color:aquamarine;">

				<span></span>
			</div>
			<div id="dvRenk" style="width:200px; height:200px; background-color:aquamarine;"></div>
			<span></span>
		</div>

		<div id="dvRenk" style="width:200px; height:200px; background-color:aquamarine;"></div>
		<div id="dvRenk1" style="width:300px; height:300px; background-color:blue;"></div>

		<button id="btnRenkDegistir" class="btn btn-success">Renk Değiştir</button>
		<button id="btnGeriAl" onclick="GeriAl()" class="btn btn-success">Renk Geri Al</button>
	</div>
</div>

@section scripts{

	<script type="text/javascript">

		$("#btnRenkDegistir").on("click", function () {
			$("#dvRenk").css("background-color", "red");
			$("#dvRenk1").addClass("siyahyap");

			var count = 0;
			$("#dvTasiyici > div").each(function () {

				if (count == 0) {
					$(this).css("background-color", "red");
				}
				else if (count == 1) {
					$(this).css("background-color", "yellow");
				}

				count++;
			});

		});


		function GeriAl() {
			$("#dvRenk").css("background-color", "aquamarine");
			$("#dvRenk1").removeClass("siyahyap");
		}




	</script>
}
